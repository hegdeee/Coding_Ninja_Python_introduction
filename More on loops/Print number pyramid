from os import *
from sys import *
from collections import *
from math import *

## Read input as specified in the question.
## Print output as specified in the question.
N = int(input())
for i in range(1, N + 1):
    for j in range(i - 1):
        print(' ', end='')
    for j in range(i, N + 1):
        print(j, end='')
    print('')
for i in range(1, N):
    for j in range(N - i - 1):
        print(" ",end="")
    for j in range(N - i, N+ 1):
        print(j,end="")
    print()
