from os import *
from sys import *
from collections import *
from math import *

## Read input as specified in the question.
## Print output as specified in the question.
n=int(input())
i=1

while i<=n:
    k=1
    while k<=n-i:
        print(' ',end='')
        k+=1
    j=1
    o=i
    while j<=i:
        print(o,end='')
        j+=1
        o+=1
    p=i-1
    m=2*(i-1)
    while p>=1:
        print(m,end='')
        p-=1
        m-=1
    
    print()
    i+=1
