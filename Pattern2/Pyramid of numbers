from os import *
from sys import *
from collections import *
from math import *

## Read input as specified in the question.
## Print output as specified in the question.
n=int(input())
i=1
while i<=n:
    print(' '*(n-i),end='')
    j=i
    while j>=1:
        print(j,end='')
        j-=1
    k=i-1
    m=2
    while k>=1:
        print(m,end='')
        k-=1
        m+=1
    print()
    i+=1
        
