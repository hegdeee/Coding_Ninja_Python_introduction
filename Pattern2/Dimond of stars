from os import *
from sys import *
from collections import *
from math import *

## Read input as specified in the question.
## Print output as specified in the question.
n = int(input())
i = 1
while i <= n:
    if i % 2 == 1:
        print(" " * ((n-i)//2) + "*" * i)
    i += 1
i = n-2
while i > 0:
    if i % 2 == 1:
        print(" " * ((n-i)//2) + "*" * i)
    i -= 1

       
